<body>
    <div class="container">
        <h1>üìä CSV Column J Splitter</h1>
        <p class="subtitle">Upload your CSV file to extract and split Column J</p>
        
        <div class="error" id="error"></div>
        <div class="success" id="success"></div>
        
        <div class="upload-section">
            <div class="file-input-wrapper">
                <input type="file" id="csvFile" accept=".csv" />
                <label for="csvFile" class="file-input-label">
                    <span>
                        <strong>üìÅ Choose CSV File</strong>
                        <small>or drag and drop here</small>
                    </span>
                </label>
            </div>
            <div class="file-name" id="fileName"></div>
        </div>
        
        <div class="options-section">
            <div class="option-group">
                <label>
                    <input type="checkbox" id="useDelimiter" checked />
                    <span>Split Column J by delimiter:</span>
                    <input type="text" id="delimiter" value="," maxlength="5" />
                </label>
            </div>
            <div class="option-group">
                <label>
                    <input type="checkbox" id="includeMeta" checked />
                    <span>Include metadata (row index, original value)</span>
                </label>
            </div>
            <div class="option-group">
                <label>
                    <input type="checkbox" id="removeEmpty" />
                    <span>Remove empty values after split</span>
                </label>
            </div>
        </div>
        
        <div class="button-group">
            <button class="btn-process" id="processBtn" disabled>Process CSV</button>
            <button class="btn-copy" id="copyBtn" style="display: none;">üìã Copy JSON</button>
            <button class="btn-download" id="downloadBtn" style="display: none;">‚¨áÔ∏è Download CSV</button>
        </div>
        
        <div class="output-section" id="outputSection">
            <div class="output-label">JSON Output:</div>
            <div class="output-box" id="output"></div>
            <div class="stats" id="stats"></div>
        </div>
    </div>

    <script>
        const csvFile = document.getElementById('csvFile');
        const fileName = document.getElementById('fileName');
        const processBtn = document.getElementById('processBtn');
        const copyBtn = document.getElementById('copyBtn');
        const downloadBtn = document.getElementById('downloadBtn');
        const output = document.getElementById('output');
        const outputSection = document.getElementById('outputSection');
        const stats = document.getElementById('stats');
        const errorDiv = document.getElementById('error');
        const successDiv = document.getElementById('success');
        const useDelimiter = document.getElementById('useDelimiter');
        const delimiter = document.getElementById('delimiter');
        const includeMeta = document.getElementById('includeMeta');
        const removeEmpty = document.getElementById('removeEmpty');
        
        let processedData = null;
        
        // Handle file selection
        csvFile.addEventListener('change', function(e) {
            if (e.target.files.length > 0) {
                fileName.textContent = '‚úì Selected: ' + e.target.files[0].name;
                fileName.classList.add('active');
                processBtn.disabled = false;
                clearMessages();
            }
        });
        
        // Handle drag and drop
        const fileLabel = document.querySelector('.file-input-label');
        ['dragenter', 'dragover', 'dragleave', 'drop'].forEach(eventName => {
            fileLabel.addEventListener(eventName, preventDefaults, false);
        });
        
        function preventDefaults(e) {
            e.preventDefault();
            e.stopPropagation();
        }
        
        ['dragenter', 'dragover'].forEach(eventName => {
            fileLabel.addEventListener(eventName, highlight, false);
        });
        
        ['dragleave', 'drop'].forEach(eventName => {
            fileLabel.addEventListener(eventName, unhighlight, false);
        });
        
        function highlight(e) {
            fileLabel.style.background = '#f0f2ff';
            fileLabel.style.borderColor = '#764ba2';
        }
        
        function unhighlight(e) {
            fileLabel.style.background = '#f8f9ff';
            fileLabel.style.borderColor = '#667eea';
        }
        
        fileLabel.addEventListener('drop', handleDrop, false);
        
        function handleDrop(e) {
            const dt = e.dataTransfer;
            const files = dt.files;
            csvFile.files = files;
            
            const event = new Event('change', { bubbles: true });
            csvFile.dispatchEvent(event);
        }
        
        // Process CSV
        processBtn.addEventListener('click', function() {
            if (!csvFile.files.length) {
                showError('Please select a CSV file');
                return;
            }
            
            const file = csvFile.files[0];
            const reader = new FileReader();
            
            reader.onload = function(e) {
                try {
                    const csv = e.target.result;
                    processedData = parseCSVAndSplitColumnJ(csv);
                    displayOutput();
                    showSuccess('CSV processed successfully!');
                } catch (error) {
                    showError('Error processing CSV: ' + error.message);
                }
            };
            
            reader.onerror = function() {
                showError('Error reading file');
            };
            
            reader.readAsText(file);
        });
        
        function parseCSVAndSplitColumnJ(csv) {
            const lines = csv.trim().split('\n');
            const result = {
                metadata: {
                    filename: csvFile.files[0].name,
                    processedAt: new Date().toISOString(),
                    totalRows: lines.length - 1,
                    columnJ: 'Column J Data'
                },
                headers: [],
                data: [],
                allKeys: new Set()
            };
            
            // Parse headers from first line
            const headerValues = parseCSVLine(lines[0]);
            result.headers = headerValues.slice(0, 10); // Columns A-J
            
            for (let i = 1; i < lines.length; i++) {
                const values = parseCSVLine(lines[i]);
                
                if (values.length > 9) {
                    // Store columns A-I
                    const columnsAToI = values.slice(0, 9);
                    const columnJValue = values[9] || '';
                    let parsedData = {};
                    
                    // Try to parse as JSON or extract key:value pairs
                    try {
                        parsedData = parseColumnJValue(columnJValue);
                        // Track all keys
                        Object.keys(parsedData).forEach(key => result.allKeys.add(key));
                    } catch (e) {
                        // If parsing fails, store the raw value
                        parsedData = { 'value': columnJValue };
                        result.allKeys.add('value');
                    }
                    
                    const rowData = {
                        rowNumber: i,
                        columnsAToI: columnsAToI,
                        columnJOriginal: columnJValue,
                        parsedData: parsedData
                    };
                    
                    result.data.push(rowData);
                }
            }
            
            result.allKeys = Array.from(result.allKeys);
            return result;
        }
        
        function parseColumnJValue(value) {
            // Try parsing as JSON first
            try {
                let parsed = JSON.parse(value);
                return cleanParsedData(parsed);
            } catch (e) {
                // If not JSON, try parsing as key:value pairs
                const result = {};
                const pairs = value.match(/"([^"]+)":\s*"([^"]+)"/g);
                
                if (pairs) {
                    pairs.forEach(pair => {
                        const match = pair.match(/"([^"]+)":\s*"([^"]+)"/);
                        if (match) {
                            result[match[1]] = match[2];
                        }
                    });
                    return cleanParsedData(result);
                }
                
                // If no key:value pairs found, return as is
                return { 'value': value };
            }
        }
        
        function cleanParsedData(data) {
            const cleaned = {};
            for (const key in data) {
                let value = data[key];
                // Remove text before @ sign and trim
                if (value && value.includes('@')) {
                    value = value.split('@')[1].trim();
                }
                cleaned[key] = value;
            }
            return cleaned;
        }
        
        function parseCSVLine(line) {
            const result = [];
            let current = '';
            let insideQuotes = false;
            
            for (let i = 0; i < line.length; i++) {
                const char = line[i];
                const nextChar = line[i + 1];
                
                if (char === '"') {
                    if (insideQuotes && nextChar === '"') {
                        current += '"';
                        i++;
                    } else {
                        insideQuotes = !insideQuotes;
                    }
                } else if (char === ',' && !insideQuotes) {
                    result.push(current.trim());
                    current = '';
                } else {
                    current += char;
                }
            }
            
            result.push(current.trim());
            return result;
        }
        
        function displayOutput() {
            if (!processedData) return;
            
            output.textContent = JSON.stringify(processedData, null, 2);
            outputSection.classList.add('active');
            copyBtn.style.display = 'inline-block';
            downloadBtn.style.display = 'inline-block';
            
            stats.innerHTML = `
                <div><strong>Total Rows Processed:</strong> ${processedData.data.length}</div>
                <div><strong>Total Splits:</strong> ${processedData.data.reduce((sum, row) => sum + row.splitCount, 0)}</div>
                <div><strong>File:</strong> ${processedData.metadata.filename}</div>
                <div><strong>Processed At:</strong> ${new Date(processedData.metadata.processedAt).toLocaleString()}</div>
            `;
        }
        
        copyBtn.addEventListener('click', function() {
            navigator.clipboard.writeText(JSON.stringify(processedData, null, 2)).then(() => {
                showSuccess('JSON copied to clipboard!');
            });
        });
        
        downloadBtn.addEventListener('click', function() {
            const csvContent = convertToCSV(processedData);
            const dataBlob = new Blob([csvContent], { type: 'text/csv' });
            const url = URL.createObjectURL(dataBlob);
            const link = document.createElement('a');
            link.href = url;
            link.download = `column_j_split_${new Date().toISOString().slice(0, 10)}.csv`;
            document.body.appendChild(link);
            link.click();
            document.body.removeChild(link);
            URL.revokeObjectURL(url);
            showSuccess('CSV downloaded successfully!');
        });
        
        function convertToCSV(data) {
            // Create headers: columns A-I from original file + extracted keys from column J
            let headers = [...data.headers.slice(0, 9), ...data.allKeys];
            let csv = headers.map(h => `"${h}"`).join(',') + '\n';
            
            // Add data rows
            data.data.forEach(row => {
                let rowStr = '';
                
                // Add columns A-I
                row.columnsAToI.forEach(val => {
                    rowStr += `,"${val.toString().replace(/"/g, '""')}"`;
                });
                
                // Add each parsed value from column J
                data.allKeys.forEach(key => {
                    const val = row.parsedData[key] || '';
                    rowStr += `,"${val.toString().replace(/"/g, '""')}"`;
                });
                
                // Remove leading comma
                csv += rowStr.substring(1) + '\n';
            });
            
            return csv;
        }
        
        function showError(message) {
            errorDiv.textContent = message;
            errorDiv.classList.add('active');
            successDiv.classList.remove('active');
        }
        
        function showSuccess(message) {
            successDiv.textContent = message;
            successDiv.classList.add('active');
            errorDiv.classList.remove('active');
            setTimeout(() => {
                successDiv.classList.remove('active');
            }, 4000);
        }
        
        function clearMessages() {
            errorDiv.classList.remove('active');
            successDiv.classList.remove('active');
        }
    </script>
</body>
</html>
